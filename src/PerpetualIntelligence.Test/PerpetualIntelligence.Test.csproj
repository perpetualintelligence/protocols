<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup Label="Globals">
        <SccProjectName>SAK</SccProjectName>
        <SccProvider>SAK</SccProvider>
        <SccAuxPath>SAK</SccAuxPath>
        <SccLocalPath>SAK</SccLocalPath>
        <Configurations>Debug;Release</Configurations>
    </PropertyGroup>

    <Import Project="..\..\build\props\PackageApache.props" />

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <IsPackable>false</IsPackable>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <PropertyGroup Label="PiPackageProps">
        <Product>protocols</Product>
        <Description>The cross platform test components shared across application stack.</Description>
        <PackageTags>infrastructure test</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.2.5" />
        <PackageReference Include="Microsoft.AspNetCore.Mvc.Versioning.ApiExplorer" Version="5.0.0" />
        <PackageReference Include="Microsoft.AspNetCore.TestHost" Version="6.0.0-rc.2.21480.10" />
        <PackageReference Include="MSTest.TestFramework" Version="2.2.7" />
    </ItemGroup>

    <!--
        CAUTION: DO NOT EDIT UNLESS YOU ARE KNOWLEDGEABLE ABOUT THE PERPETUAL INTELLIGENCE'S AZURE AND GITHUB DEVOPS INTEGRATION.

        Purpose: Runtime reference resolution (Project references Vs Nuget Packages)

        Design: All the packages in a pipeline will have same configuration and same sematic versions.

        Pipeline: protocols

        Pipeline Configuration:
            PIDEVOPSPIPELINECONFIGURATION: Azure pipeline environment variable that determines the pipeline configuration.
            Undefined/Local: Project References in both Debug and Release mode.
            Preview: Preview Packages
            Candidate: Release Candidate Packages
            Release: Released Packages

        Pipeline Package Versioning:
            PIDEVOPSPIPELINEPREVIEWPACKAGEVERSION: Azure pipeline environment variable that determines preview (-preview) version.
            PIDEVOPSPIPELINECANDIDATEPACKAGEVERSION: Azure pipeline environment variable that determines release candidate (-rc) version.
            PIDEVOPSPIPELINERELEASEPACKAGEVERSION: Azure pipeline environment variable that determines released version.
        
        Important:
            These environment variables are set in the Azure DevOps and will not be available on the local machine unless you define
            them explicitly defined as system environment variables.
    -->
    <Choose>
        <!--Preview Pipeline-->
        <When Condition="'$(PIDEVOPSPIPELINECONFIGURATION)'=='Preview'">
            <ItemGroup>
                <PackageReference Include="PerpetualIntelligence.Shared" Version="$(PIDEVOPSPIPELINEPREVIEWPACKAGEVERSION)" />
                <PackageReference Include="PerpetualIntelligence.Data.Shared" Version="$(PIDEVOPSPIPELINEPREVIEWPACKAGEVERSION)" />
            </ItemGroup>
        </When>

        <!--Candidate Pipeline-->
        <When Condition="'$(PIDEVOPSPIPELINECONFIGURATION)'=='Candidate'">
            <ItemGroup>
                <PackageReference Include="PerpetualIntelligence.Shared" Version="$(PIDEVOPSPIPELINECANDIDATEPACKAGEVERSION)" />
                <PackageReference Include="PerpetualIntelligence.Data.Shared" Version="$(PIDEVOPSPIPELINECANDIDATEPACKAGEVERSION)" />
            </ItemGroup>
        </When>

        <!--Release Pipeline-->
        <When Condition="'$(PIDEVOPSPIPELINECONFIGURATION)'=='Release'">
            <ItemGroup>
                <PackageReference Include="PerpetualIntelligence.Shared" Version="$(PIDEVOPSPIPELINERELEASEPACKAGEVERSION)" />
                <PackageReference Include="PerpetualIntelligence.Data.Shared" Version="$(PIDEVOPSPIPELINERELEASEPACKAGEVERSION)" />
            </ItemGroup>
        </When>

        <!--Undefined/Local-->
        <Otherwise>
            <ItemGroup>
                <ProjectReference Include="..\PerpetualIntelligence.Data.Shared\PerpetualIntelligence.Data.Shared.csproj" />
                <ProjectReference Include="..\PerpetualIntelligence.Shared\PerpetualIntelligence.Shared.csproj" />
            </ItemGroup>
        </Otherwise>
    </Choose>

</Project>
